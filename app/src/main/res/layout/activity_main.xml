<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ranking_prod_pic1"
        android:layout_width="126dp"
        android:layout_height="123dp"
        android:layout_marginTop="468dp"
        android:adjustViewBounds="true"

        android:contentDescription="@string/app_name"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@android:color/background_dark"
        android:scaleType="centerCrop"
        android:src="@drawable/fuelaviolet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/ranking_prod_pic" />

    <ImageView
        android:id="@+id/ranking_prod_pic"
        android:layout_width="417dp"
        android:layout_height="525dp"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"

        android:src="@drawable/bg11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:layout_marginTop="28dp"
        android:indeterminate="false"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="1"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/appCompatTextView"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ranking_prod_pic1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:fontFamily="@font/century"
        android:gravity="center"
        android:text="Loading.."
        android:textColor=" #68213A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ranking_prod_pic"
        app:layout_constraintTop_toBottomOf="@+id/ranking_prod_pic1"
        app:layout_constraintVertical_bias="0.724"
        tools:layout_editor_absoluteX="0dp">

    </androidx.appcompat.widget.AppCompatTextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/century"
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ranking_prod_pic1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/ranking_prod_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />


   

